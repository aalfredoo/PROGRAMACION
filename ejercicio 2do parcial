#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

int main ()
{
	int N, i=0, digito;
	cout<< "INGRESE EL NUMERO";
	cin>> N;
	while (N>0)
	{
	 digito= N%10;
	 N=N/10;
	 if (digito%2!=0)
		i=i+1;
	 cout<< digito<<"\n";
	}
	cout<< "el contador es:\n";
	cout<< i;
	getch();
	return 0;
}
