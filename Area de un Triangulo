#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"

using namespace std;

void main ()
{
	float area,ladoa,ladob,ladoc, sp;
	cout<<"ingrese lado 1: ";
	cin>>ladoa;
	cout<<"ingrese lado 2: ";
	cin>>ladob;
	cout<<"ingrese lado 3: ";
	cin>>ladoc;
	sp=(ladoa+ladob+ladoc)/2;
	area=sqrt(sp*(sp-ladoa)*(sp-ladob)*(sp-ladoc));
	cout<<"area: "<<area;
	getch();
}
